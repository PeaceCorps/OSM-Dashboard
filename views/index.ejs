      function initmap() {
        // set up the map
        map = new L.Map('map', {
          zoomControl: false,
          dragging: false,
          scrollWheelZoom: false,
          doubleClickZoom: false,
          boxZoom: false,
          drawControl: true
        });

        /*var drawnItems = new L.FeatureGroup();
